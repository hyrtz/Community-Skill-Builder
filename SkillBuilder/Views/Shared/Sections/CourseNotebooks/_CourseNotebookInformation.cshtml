@model SkillBuilder.Models.Course

<style>
    .course-info-view h1 {
        margin-bottom: 0.5rem;
    }

    .course-info-view-video {
        margin-bottom: 2rem;
    }

    .course-info-view-learn-list {
        list-style: none;
        padding-left: 0;
    }

    .course-info-view-learn-item {
        margin-bottom: 0.5rem;
    }

        .course-info-view-learn-item span {
            color: #344AEA;
            font-weight: bold;
        }

    .course-info-view-description,
    .course-info-view-requirements {
        margin-top: 2rem;
    }
</style>

<div class="course-info-view">
    <!-- Video -->
    <div class="course-info-view-video">
        <video width="100%" height="auto" controls poster="@Model.Thumbnail">
            <source src="@Url.Content(Model.Video)" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>

    <!-- What You'll Learn -->
    @if (!string.IsNullOrWhiteSpace(Model.WhatToLearn))
    {
        <h1>What You'll Learn</h1>
        <ul class="course-info-view-learn-list">
            @foreach (var item in Model.WhatToLearn.Split("||"))
            {
                if (!string.IsNullOrWhiteSpace(item))
                {
                    <li class="course-info-view-learn-item">
                        <span>&gt;</span> @item
                    </li>
                }
            }
        </ul>
    }

    <!-- Full Description -->
    <div class="course-info-view-description">
        <h1 style="margin-bottom: 0.5rem; padding:0;">Course Description</h1>
        <div style="white-space: pre-wrap;">@(Model.FullDescription?.Trim() ?? "")</div>
    </div>

    <!-- Requirements -->
    <div class="course-info-view-requirements">
        <h1 style="margin-bottom: 0.5rem; padding:0;">Requirements and Materials</h1>
        <div style="white-space: pre-wrap;">@(Model.Requirements?.Trim() ?? "")</div>
    </div>
</div>