@model SkillBuilder.Models.ViewModels.CommunityHubViewModel

<style>
    .community-notebook-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 0.5rem 0;
    }

    .community-notebook-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        padding: 1rem;
        text-decoration: none;
        color: inherit;
        transition: background 0.2s ease;
        cursor: pointer;
    }

        .community-notebook-card:hover {
            background-color: #f0f0f0;
        }

        .community-notebook-card.active {
            background-color: #e6f0ff;
            border: 1px solid #4a90e2;
        }

    .community-notebook-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        flex-shrink: 0;
    }

    .community-notebook-info {
        display: flex;
        flex-direction: column;
    }

        .community-notebook-info h3 {
            font-weight: bold;
            font-size: 1rem;
            color: #333;
            margin: 0;
        }

        .community-notebook-info span {
            font-size: 0.85rem;
            color: #777;
        }
</style>

<div class="community-notebook-list">
    @foreach (var community in Model.Communities)
    {
        var avatarUrl = string.IsNullOrEmpty(community.AvatarUrl)
        ? "/uploads/community-profile/default-avatar.png"
        : community.AvatarUrl;

        <a href="@Url.Action("CommunityHub", "Community", new { selectedCommunityId = community.Id })"
           class="community-notebook-card community-list-item @(Model.SelectedCommunity?.Id == community.Id ? "active" : "")"
           data-name="@community.Name"
           data-description="@community.Description">

            <img src="@avatarUrl"
                 class="community-notebook-avatar"
                 alt="@community.Name"
                 onerror="this.src='/uploads/community-profile/default-avatar.png';" />

            <div class="community-notebook-info">
                <h3>@community.Name</h3>
                <span>@community.MembersCount members</span>
            </div>
        </a>
    }

    <p id="noCommunitiesFound" style="display:none; text-align:center; padding:1rem; color:#888;">
        No communities match your search.
    </p>
</div>