@using SkillBuilder.Models.ViewModels
@model UserProfileViewModel

@{
    ViewData["IsCatalogPage"] = false;
    ViewData["IsUserProfile"] = true;

    var ongoingCourses = Model.CourseProgresses?.Where(c => c.ProgressPercentage < 100).ToList();
}

<style>
    .user-dashboard-section {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .user-dashboard-header {
        font-size: 1.8rem;
        color: #344AEA;
        margin-bottom: 1rem;
    }

    .user-dashboard-stats {
        display: flex;
        gap: 2rem;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    .user-dashboard-card {
        flex: 1 1 30%;
        background-color: #E6EEFF;
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        transition: transform 0.3s ease;
        text-align: center;
        min-width: 200px;
    }

        .user-dashboard-card:hover {
            transform: translateY(-4px);
        }

    .user-dashboard-card-title {
        font-size: 1.2rem;
        color: #344AEA;
        font-weight: 600;
        margin-bottom: 0.8rem;
    }

    .user-dashboard-card-value {
        font-size: 2rem;
        font-weight: bold;
        color: #222;
    }
</style>

<div class="user-dashboard-section">
    <h2 class="user-dashboard-header">Dashboard<br /><span style="font-size: 1rem; font-weight: 400; color: black;">This is your dashboard where you can see your current enrollments, points, and course progress.</span></h2>

    <div class="user-dashboard-stats">
        <div class="user-dashboard-card">
            <div class="user-dashboard-card-title">Total Enrollments</div>
            <div class="user-dashboard-card-value">@((Model.EnrolledCourses != null) ? Model.EnrolledCourses.Count() : 0)</div>
        </div>
        <div class="user-dashboard-card">
            <div class="user-dashboard-card-title">Total Points</div>
            <div class="user-dashboard-card-value" id="pointsDisplay">@Model.User.Points</div>
        </div>
        <div class="user-dashboard-card">
            <div class="user-dashboard-card-title">Profile Status</div>
            <div class="user-dashboard-card-value">Active</div>
        </div>
    </div>

    @if (!Model.User.IsDeactivated && Model.User.IsVerified)
    {
        if (ongoingCourses != null && ongoingCourses.Any())
        {
            // Render ongoing courses partial
            @await Html.PartialAsync("Sections/UserNotebooks/_UserNotebookProgress", Model.CourseProgresses)
        }
        else
        {
            // No ongoing courses → show recommended courses
            @await Html.PartialAsync("Sections/_RecommendedCourses", Model.RecommendedCourses)
        }
    }
    else if (!Model.User.IsVerified)
    {
        <div style="margin-top: 2rem; padding: 1.5rem; background-color: #fff3e6; border-radius: 12px; text-align: center;">
            <h3 style="color: #e67e22; margin-bottom: 0.5rem;">Email Not Verified</h3>
            <p style="color: #555;">You must verify your email before you can resume or enroll in courses. Please check your inbox for the verification link.</p>
        </div>
    }
    else
    {
        <div style="margin-top: 2rem; padding: 1.5rem; background-color: #ffe6e6; border-radius: 12px; text-align: center;">
            <h3 style="color: #e74c3c; margin-bottom: 0.5rem;">Account Deactivated</h3>
            <p style="color: #555;">You cannot resume or enroll in courses while your account is deactivated.</p>
        </div>
    }
</div>